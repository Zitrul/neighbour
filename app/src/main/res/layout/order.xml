<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black">


    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="92dp"

        android:backgroundTint="#336666"
        android:textColor="#FFFFFF"
        android:text="Создать"
        app:layout_constraintTop_toBottomOf="@+id/editTextDesc"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:text="Описание:"
        android:textColor="@color/main_text"
        app:layout_constraintBottom_toTopOf="@+id/editTextDesc"
        app:layout_constraintTop_toBottomOf="@+id/Textname"
        tools:layout_editor_absoluteX="45dp" />

    <EditText
        android:id="@+id/editTextDesc"
        android:layout_width="298dp"
        android:layout_height="107dp"
        android:layout_marginTop="10dp"
        style="@style/EditTextRounded"
        android:textColor="@color/main_text"
        app:layout_constraintBottom_toTopOf="@+id/textView10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.398"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <EditText
        android:id="@+id/editTextPrice"
        android:layout_width="297dp"
        android:layout_height="37dp"
        android:layout_marginTop="10dp"
        style="@style/EditTextRounded"

        android:gravity="center"
        android:textColor="@color/edit_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.398"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <EditText
        style="@style/EditTextRounded"
        android:id="@+id/Textname"
        android:layout_width="297dp"
        android:layout_height="37dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="@color/edit_text"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.394"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:text="Цена:"
        android:textColor="@color/main_text"
        app:layout_constraintBottom_toTopOf="@+id/editTextPrice"
        app:layout_constraintTop_toBottomOf="@+id/editTextDesc"
        tools:layout_editor_absoluteX="45dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Назание заказа:"
        android:textColor="@color/main_text"
        app:layout_constraintBottom_toTopOf="@+id/Textname"
        app:layout_constraintTop_toBottomOf="@+id/imageview"
        tools:layout_editor_absoluteX="45dp" />

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="107dp"
        android:layout_height="107dp"
        android:layout_marginTop="42dp"
        app:layout_constraintBottom_toTopOf="@+id/textView11"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/flag_russia"
        tools:layout_editor_absoluteX="45dp" />
</androidx.constraintlayout.widget.ConstraintLayout>